<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/theirLife"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            app:layout_constraintHorizontal_bias="0.303" app:layout_constraintVertical_bias="0.257"/>
    <Button
            android:text="-1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myLifeMinusButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="54dp"
            app:layout_constraintStart_toEndOf="@+id/myLife" android:layout_marginStart="58dp"
            android:layout_marginBottom="140dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/myLife"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            app:layout_constraintHorizontal_bias="0.303" app:layout_constraintVertical_bias="0.715"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myLifePlusButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="54dp"
            app:layout_constraintStart_toEndOf="@+id/myLife" android:layout_marginStart="58dp"
            android:layout_marginBottom="29dp" app:layout_constraintBottom_toTopOf="@+id/myLifeMinusButton"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/theirLifePlusButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="54dp" app:layout_constraintStart_toEndOf="@+id/myLife"
            android:layout_marginStart="58dp"
            android:layout_marginTop="135dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="-1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/theirLifeMinusButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="54dp" app:layout_constraintStart_toEndOf="@+id/myLife"
            android:layout_marginStart="58dp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/theirLifePlusButton"/>
    <TextView
            android:text="My Life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMyLife"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintBottom_toTopOf="@+id/myLife" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="87dp"/>
    <TextView
            android:text="Their Life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTheirLife"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp"
            app:layout_constraintBottom_toTopOf="@+id/myLife" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>